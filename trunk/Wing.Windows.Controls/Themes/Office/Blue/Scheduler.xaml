    <Style x:Key="TimelineAppointmentsControlsContainerItemContainerStyle" TargetType="telerikScheduler:AppointmentsControlsContainerItem">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="telerikScheduler:AppointmentsControlsContainerItem">
                    
                    <telerik:RadButton Style="{StaticResource FloatUpButton}" Canvas.ZIndex="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(Canvas.ZIndex), Mode=TwoWay}">
                        

                        <telerikScheduler:AppointmentsControl
							x:Name="Appointments" IsTabStop="False"
							Grid.Column="1"
							Style="{StaticResource TimelineAppointmentsControl}"
							TimeSlots="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=TimeSlots}" 
								Appointments="{Binding Appointments,Mode=OneTime}"  />

                        
                    </telerik:RadButton>
                    
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
