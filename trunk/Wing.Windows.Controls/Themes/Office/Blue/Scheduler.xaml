                    <ItemsPanelTemplate>
                        <telerikScheduler:VirtualizedAppointmentPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </telerikScheduler:AppointmentItemsControl>
