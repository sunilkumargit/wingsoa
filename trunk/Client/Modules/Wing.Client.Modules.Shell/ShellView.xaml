<UserControl xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  x:Class="Wing.Client.Modules.Shell.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="auto" Height="auto">
    <Grid x:Name="LayoutRoot" Background="#293852">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="#515f7c" Orientation="Horizontal">
            <TextBlock Text="Wing" VerticalAlignment="Center" FontFamily="Tahoma" FontSize="16" Foreground="White" FontWeight="Normal" Margin="6,0,0,0"/>
            <TextBlock Text="Applications" VerticalAlignment="Center" FontFamily="Tahoma" FontSize="10" Foreground="White" Margin="3,6,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1">
            <Button x:Name="InstallButton" Content="Instalar" HorizontalAlignment="Right" Margin="5" FontSize="9" FontFamily="Tahoma" Background="Transparent" 
                    BorderBrush="Transparent" Foreground="Blue" Click="Button_Click">
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
