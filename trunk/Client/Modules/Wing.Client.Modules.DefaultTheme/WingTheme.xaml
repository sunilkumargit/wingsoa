<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    
    Brushes
    
    -->
    
    <Color x:Key="DarkGreenColor">#FF07721C</Color>
    <Color x:Key="LightToolbarBorderColor">#FF94C6F3</Color>

    <LinearGradientBrush x:Key="LightToolbarBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFD0E9FF" Offset="0.318"/>
        <GradientStop Color="#FFA9D1F5" Offset="0.996"/>
        <GradientStop Color="#FFA9D1F5" Offset="0.603"/>
        <GradientStop Color="#FFD2E5FD" Offset="0.396"/>
    </LinearGradientBrush>

    <!--
    
    Basic controls    
    
    -->
    <Style x:Key="LightToolbarBorder" TargetType="Border">
        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource LightToolbarBorderColor}"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="{StaticResource LightToolbarBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="1"/>
    </Style>

    <Style x:Key="PageSideBarTitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource DarkGreenColor}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="10,10,5,5"/>
    </Style>
    
    
</ResourceDictionary>
